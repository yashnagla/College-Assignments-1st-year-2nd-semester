//Write a program to calculate the real root of a quadratic equation?
#include<stdio.h>
#include<math.h>
int main()
{
	int a,b,c;
	int root1,root2,imaginaly,discriminant;
	printf("Enter values of a,b,c of equation (ax^2+bx+c):",&a,&b,&c);
	discriminant=(b+b)-(4*a*c);
	if (discriminant>0)
	{
		root1=(-b+sqrt(discriminant))/(2*a);
		root2=(-b-sqrt(discriminant))/(2*a);
		printf("Two distinct and real roots exist: %2fam%.2f",root1,root2);
	}
	else if(discriminant == 0)
	{
		root1=root2=-b/(2*a);
		printf("Two equal and real root exist: %2f&%2f",root1,root2);
	} 
	else if(discriminant<0)
	{
		root1=root2=-b/(2*a);
		imaginaly=sqrt(-discriminant)/(2*a);
		printf("Two imaginaly root exist:%2f+i%2f & %2f-i%2f",root1,imaginaly,root2,imaginaly);
	}
	return 0;
}
